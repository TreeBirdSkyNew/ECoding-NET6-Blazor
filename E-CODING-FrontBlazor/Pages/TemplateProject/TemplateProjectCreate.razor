@page "/templateprojectcreate/{Id}"
@using E_CODING_FrontBlazor.DTOs;

<PageTitle>Les Template Project</PageTitle>

<EditForm Model="@templateProjectVM" OnSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <div class="row">
        <div class="col-sm-4">
            <h3>Edit TemplateProject</h3>
            <hr />
            <div class="form-group row">
                <label for="TemplateProjectTitle" class="col-sm-2 col-form-label">
                    Title :
                </label>
                <div class="col-sm-10">
                    <InputText id="TemplateProjectTitle"
                               @bind-Value="templateProjectVM.TemplateProjectTitle"
                               class="form-control"></InputText>
                    <ValidationMessage For="@(() => templateProjectVM.TemplateProjectTitle)" />
                </div>
            </div>
            <div class="form-group row">
                <label for="TemplateProjectName" class="col-sm-2 col-form-label">
                    Name :
                </label>
                <div class="col-sm-10">
                    <InputText id="TemplateProjectName"
                               @bind-Value="templateProjectVM.TemplateProjectName"
                               class="form-control"></InputText>
                    <ValidationMessage For="@(() => templateProjectVM.TemplateProjectName)" />
                </div>
            </div>
            <div class="form-group row">
                <label for="TemplateProjectDescription" class="col-sm-2 col-form-label">
                    Description :
                </label>
                <div class="col-sm-10">
                    <InputTextArea id="TemplateProjectDescription"
                                   @bind-Value="templateProjectVM.TemplateProjectDescription"
                                   class="form-control"></InputTextArea>
                    <ValidationMessage For="@(() => templateProjectVM.TemplateProjectDescription)" />
                </div>
            </div>
            <div class="form-group row">
                <label for="TemplateSolutionVersion" class="col-sm-2 col-form-label">
                    Version :
                </label>
                <div class="col-sm-10">
                    <InputText id="TemplateProjectVersion"
                               @bind-Value="templateProjectVM.TemplateProjectVersion"
                               class="form-control"></InputText>
                    <ValidationMessage For="@(() => templateProjectVM.TemplateProjectVersion)" />
                </div>
            </div>
            <div class="form-group row">
                <label for="TemplateProjectVersionNet" class="col-sm-2 col-form-label">
                    VersionNet :
                </label>
                <div class="col-sm-10">
                    <InputText id="TemplateProjectVersionNet"
                               @bind-Value="templateProjectVM.TemplateProjectVersionNet"
                               class="form-control"></InputText>
                    <ValidationMessage For="@(() => templateProjectVM.TemplateProjectVersionNet)" />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</EditForm>
