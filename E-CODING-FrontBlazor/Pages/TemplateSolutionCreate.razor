@page "/templatesolutioncreate/{Id}"


<PageTitle>Les Template Solution</PageTitle>

<div class="row">
    <div class="col-sm-4">
        <EditForm Model="@templateSolutionVM" OnSubmit="HandleValidSubmit">
            <h3>Edit TemplateSolution</h3>
            <hr />
            <div class=form-group row">
                <label for="TemplateProjectId" class="col-sm-2 col-form-label">
                    ProjectId :
                </label>
                <div class="col-sm-10">
                    <InputSelect @bind-Value="templateSolutionVM.TemplateProjectId" class="form-control">
                        @foreach (var cnt in TemplateProjectVMs)
                        {

                            <option value="@cnt.TemplateProjectId">@cnt.TemplateProjectName</option>
                        }
                    </InputSelect>
                </div>
            </div>
            <div class="form-group row">
                <label for="TemplateSolutionTitle" class="col-sm-2 col-form-label">
                    Title :
                </label>
                <div class="col-sm-10">
                    <InputText id="TemplateSolutionTitle"
                               @bind-Value="templateSolutionVM.TemplateSolutionTitle"
                            class="form-control"></InputText>
                </div>
            </div>
            <div class="form-group row">
                <label for="TemplateSolutionName" class="col-sm-2 col-form-label">
                    Name :
                </label>
                <div class="col-sm-10">
                    <InputText id="TemplateSolutionName"
                               @bind-Value="templateSolutionVM.TemplateSolutionName"
                            class="form-control"></InputText>
                </div>
            </div>
            <div class="form-group row">
                <label for="TemplateSolutionDescription" class="col-sm-2 col-form-label">
                    Description :
                </label>
                <div class="col-sm-10">
                    <InputTextArea id="TemplateSolutionDescription" 
                                @bind-Value="templateSolutionVM.TemplateSolutionDescription"
                              class="form-control"></InputTextArea>
                </div>
            </div>
            <div class="form-group row">
                <label for="TemplateSolutionVersion" class="form-label">
                    Version :
                </label>
                <div class="col-sm-10">
                    <InputText id="TemplateSolutionVersion"
                               @bind-Value="templateSolutionVM.TemplateSolutionVersion"
                               class="form-control"></InputText>
                </div>
            </div>
            <div class="form-group row">
                <label for="TemplateSolutionVersionNet" class="form-label">
                    VersionNet :
                </label>
                    <div class="col-sm-10">
                    <InputText id="TemplateSolutionVersionNet"
                               @bind-Value="templateSolutionVM.TemplateSolutionVersionNet"
                               class="form-control"></InputText>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </EditForm>
    </div>
</div>

